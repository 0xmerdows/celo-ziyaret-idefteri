pragma solidity ^0.8.19;

// OpenZeppelin Ownable (Remix-friendly import) — alternatif olarak lokal kütüphane kullanabilirsin.
import "https://github.com/OpenZeppelin/openzeppelin-contracts/blob/master/contracts/access/Ownable.sol";

contract VisitorBook is Ownable {
    struct Entry {
        address author;
        string name;
        string message;
        uint256 timestamp;
        bool removed; // soft-delete flag — fiziksel silme yapmıyoruz (index stabilitesi için)
    }

    Entry[] private entries;

    /// Events
    event EntryAdded(uint256 indexed index, address indexed author, string name, uint256 timestamp);
    event EntryUpdated(uint256 indexed index, address indexed editor, string newMessage, uint256 timestamp);
    event EntryRemoved(uint256 indexed index, address indexed remover, uint256 timestamp);

    /// Limits (gas + spam koruması için)
    uint256 public constant MAX_MESSAGE_LENGTH = 1024; // bytes ~ karakter; aşırı uzun mesaj engellenir
    uint256 public minAddPrice = 0; // istersen ETH fiyatı koyabilir
