      {
        "group": "Core Concepts",
        "icon": "book-open",
        "pages": ["core-concepts/project-structure", "core-concepts/templates"]
      },
      {
        "group": "CLI Reference",
        "icon": "terminal",
        "pages": ["cli-reference/create-command", "cli-reference/configuration"]
      },
      {
        "group": "Templates",
        "icon": "clone",
        "pages": ["templates/web-app-template", "templates/farcaster-miniapp"]
      },
      {
